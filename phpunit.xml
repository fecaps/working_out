<phpunit colors="true"
         stopOnFailure="false"
         verbose="true">

    <testsuites>
        <testsuite name="Working Out">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-html" target="./report"/>
    </logging>

    <filter>
        <whitelist>
            <directory>./src/</directory>
        </whitelist>
    </filter>
</phpunit>
